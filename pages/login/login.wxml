<!--pages/login/login.wxml-->
<view class='page' style='overflow:hidden;'>
    <view class='header'>
        <view class='title'>
            <text>登录</text>
        </view>
    </view>
    <view class='login'>Login</view>
    <view class='content'>
        <view class='input'>
            <image src='../image/login_user.png'/>
            <input bindinput='input' data-type="username" type='text' placeholder='请输入VIP账号'/>
            <view class='clearfix'></view>
        </view>
        <view class='input'>
            <image src='../image/login_password.png'/>
            <input bindinput='input' data-type="password" type='password' placeholder='请输入账号密码'/>
            <view class='clearfix'></view>
        </view>
        <text class='changeLogin' bindtap='changePhoneLogin'>切换为手机登录</text>
        <view class='clearfix'></view>
    </view>
    <view class='loginBtn'>
        <view bindtap='login'>登录</view>
    </view>
    <view class='regist' bindtap='openRegist'>注册账号</view>
    <view class='contact'>
        <!-- <text bindtap='openContact'>联系客服</text> -->
        <button open-type="contact">联系客服</button>
    </view>
</view>
