/* pages/mine/mine.wxss */
.weui-search-bar{
    border: none;
    background: #fff;
}
.weui-search-bar__cancel-btn{
    font-size: 14px;
    color: #999999;
    letter-spacing: -0.01px;
    line-height: 30px;
}
.weui-search-bar__box,.weui-search-bar__label{
    background:#F5F5F5;
    border-radius: 21px;
}
.weui-search-bar__form{
    border: none;
}

.content .list{
    padding:1% 5%;
    border-bottom: 1px solid #e1e1e1;
}
.content .list .title{
    font-size: 16px;
    color: rgba(51,51,51,0.87);
    text-align: left;
    line-height: 24px;
}
.content .list .desc{
    margin-top:5px;
}
.content .list .desc image{
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 3%;
}
.content .list .desc text{
    font-size: 14px;
    color: rgba(0,0,0,0.54);
    text-align: left;
    line-height: 20px;
}
.content .list .status text:first-of-type{
    font-size: 12px;
    color: #E31436;
    line-height: 20px;
}
.content .list .status text:last-of-type{
    font-size: 12px;
    color: rgba(0,0,0,0.54);
    text-align: left;
    line-height: 20px;
    float:right;
    margin-top:8px;
}