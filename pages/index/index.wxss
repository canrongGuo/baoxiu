/**index.wxss**/
page{
    background: #f1f1f1;
}
.list{
    margin-top: 5%;
    background: #fff;
    width: 90%;
    margin-left: 5%;
    padding-bottom: 5%;
    border-radius: 5px;
    position: relative;
}
.list .bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    border-radius: 5px;
}
.list .box{
    padding: 5%;
}
.list .img{
    width: 240px;
    height: 180px;
    margin: 0 auto;
}
.list .img image{
    width: 100%;
    height: 100%;
}
.button{
    padding:0 3%;
    position: relative;
    z-index: 2;
}
.button view{
    height: 45px;
    line-height: 45px;
    background: #1772DB;
    border-radius: 10px;
    font-family: PingFangSC-Regular;
    font-size: 18px;
    color: #FFFFFF;
    letter-spacing: -0.01px;
    text-align: center;
}